<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_gradient_light_grey">

    <com.dentacoin.dentacare.widgets.DCTimerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        app:text="0:32"
        app:type="bigProgress"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <com.dentacoin.dentacare.widgets.DCTimerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="0:32"
            app:title="Last brush"
            app:type="smallInfo"/>

        <com.dentacoin.dentacare.widgets.DCTimerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:text="1"
            app:title="Brush left"
            app:type="smallInfo"/>

        <com.dentacoin.dentacare.widgets.DCTimerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text="12,3"
            app:title="DCN Earned"
            app:type="smallInfo"/>
    </LinearLayout>

    <com.dentacoin.dentacare.widgets.DCButton
        style="@style/DCButton.Dashboard"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="FLOSS"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:src="@drawable/up_arrow"
        android:layout_gravity="center"/>
</LinearLayout>