<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_gradient_light_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp">

        <com.dentacoin.dentacare.widgets.DCTimerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            app:text="0:00"
            app:type="bigProgress"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="0:00"
                app:title="Last brush"
                app:type="smallInfo"/>

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                app:text="3"
                app:title="Brush left"
                app:type="smallInfo"/>

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text="0"
                app:title="DCN Earned"
                app:type="smallInfo"/>
        </LinearLayout>

        <com.dentacoin.dentacare.widgets.DCButton
            style="@style/DCButton.Dashboard"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:text="FLOSS"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_statistics"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_gradient_blue"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:layout_height="300dp"
        app:behavior_peekHeight="35dp"
        app:behavior_hideable="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp">
            <ImageView
                android:id="@+id/iv_dashboard_down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow" />
            <ImageView
                android:id="@+id/iv_dashboard_up_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/up_arrow" />
        </RelativeLayout>


        <com.dentacoin.dentacare.widgets.DCTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontType="light"
            android:textSize="25sp"
            android:text="Rinse Statistics"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:gravity="center">

            <com.dentacoin.dentacare.widgets.DCButton
                style="@style/DCButton.Statistics"
                android:text="Daily"/>

            <com.dentacoin.dentacare.widgets.DCButton
                style="@style/DCButton.Statistics"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Weekly"/>

            <com.dentacoin.dentacare.widgets.DCButton
                style="@style/DCButton.Statistics"
                android:text="Monthly"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:type="smallProgress"
                app:text="0"
                app:title="Times rinsed"/>

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:type="smallProgress"
                app:text="0:00"
                app:title="time left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <com.dentacoin.dentacare.widgets.DCTimerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:type="smallProgress"
                app:text="0:00"
                app:title="average time"/>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>