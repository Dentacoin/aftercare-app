<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_drawer_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingTop="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="25dp"
    android:background="@drawable/rectangle_gradient_light_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_drawer_header_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:roundAsCircle="true"
            app:placeholderImage="@drawable/welcome_avatar_holder"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_drawer_header_userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingStart="20dp">

                <com.dentacoin.dentacare.widgets.DCTextView
                    android:id="@+id/tv_drawer_header_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontType="light"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <com.dentacoin.dentacare.widgets.DCTextView
                    android:id="@+id/tv_drawer_header_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontType="light"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>