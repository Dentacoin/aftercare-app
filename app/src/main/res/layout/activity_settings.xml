<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrey">
        <com.dentacoin.dentacare.widgets.DCTextView
            style="@style/DCListItem.Header"
            android:text="@string/settings_hdl_music_and_sounds"/>
        <LinearLayout
            style="@style/DCListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dentacoin.dentacare.widgets.DCTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/settings_lbl_sounds"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/sw_settings_sounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
        </LinearLayout>
        <LinearLayout
            style="@style/DCListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dentacoin.dentacare.widgets.DCTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/settings_lbl_music"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/sw_settings_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
        </LinearLayout>
        <LinearLayout
            style="@style/DCListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_settings_voice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/settings_lbl_voice_male"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/sw_settings_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
        </LinearLayout>
        <com.dentacoin.dentacare.widgets.DCTextView
            style="@style/DCListItem.Header"
            android:text="@string/settings_lbl_notifications"/>
        <LinearLayout
            android:id="@+id/ll_settings_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                style="@style/DCListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/settings_lbl_daily_brushing"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/sw_settings_daily_brushing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/DCListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/settings_lbl_change_brush"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/sw_settings_change_brush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/DCListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/settings_lbl_visit_dentist"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/sw_settings_visit_dentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/DCListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/settings_lbl_reminder_visit"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/sw_settings_reminder_to_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/DCListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/settings_lbl_healthy_habits"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/sw_settings_healthy_habits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_settings_enable_notifications"
            style="@style/DCListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dentacoin.dentacare.widgets.DCTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/settings_lbl_enable_notifications"
                android:textSize="16sp"/>
            <Switch
                android:id="@+id/sw_settings_enable_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
