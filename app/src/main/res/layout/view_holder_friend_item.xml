<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_friend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            app:placeholderImage="@drawable/baseline_account_circle_black_48"
            app:roundAsCircle="true"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="4dp"/>
            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_last_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.dentacoin.dentacare.widgets.DCButton
                    android:id="@+id/btn_decline"
                    style="@style/DCButton.Decline"
                    android:text="@string/btn_decline"
                    android:layout_margin="8dp"/>
                <com.dentacoin.dentacare.widgets.DCButton
                    android:id="@+id/btn_accept"
                    style="@style/DCButton.Accept"
                    android:text="@string/btn_accept"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_right_white_24"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/charcoalGrey"/>
    </LinearLayout>
</android.support.v7.widget.CardView>