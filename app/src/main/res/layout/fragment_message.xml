<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_gradient_blue_rounded">

        <ImageView
            android:id="@+id/iv_message_tooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tooth_logo"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <com.dentacoin.dentacare.widgets.DCTextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            app:fontType="bold"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

        <com.dentacoin.dentacare.widgets.DCTextView
            android:id="@+id/tv_message_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <com.dentacoin.dentacare.widgets.DCTextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp"
            android:textColor="@color/white"
            android:text="Good morning sunshine. It is a beautiful day. Letâ€™s get you started properly."/>

        <com.dentacoin.dentacare.widgets.DCButton
            android:padding="10dp"
            android:id="@+id/btn_message_activity"
            style="@style/DCButton.Rectangle"
            android:text="Start morning routine"
            android:layout_gravity="center"
            android:layout_margin="15dp"/>

    </LinearLayout>
</RelativeLayout>