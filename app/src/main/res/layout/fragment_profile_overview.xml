<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_gradient_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_profile_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                fresco:backgroundImage="@drawable/welcome_avatar_holder"
                fresco:roundAsCircle="true"
                app:roundingBorderColor="@color/white"
                fresco:fadeDuration="0"
                fresco:roundingBorderWidth="2.5dp"
                android:layout_gravity="center"/>

            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_profile_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:fontType="light"
                android:paddingTop="10dp"
                android:layout_gravity="center"/>

            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontType="light"
                android:paddingTop="5dp"
                android:layout_gravity="center"/>

            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_profile_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontType="light"
                android:paddingTop="5dp"
                android:layout_gravity="center"/>

            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontType="light"
                android:paddingTop="5dp"
                android:layout_gravity="center"/>

            <com.dentacoin.dentacare.widgets.DCTextView
                android:id="@+id/tv_profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontType="light"
                android:paddingTop="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </RelativeLayout>
    <com.dentacoin.dentacare.widgets.DCButton
        android:id="@+id/btn_profile_edit"
        style="@style/DCButton.Auth"
        android:text="@string/profile_btn_edit"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>
</LinearLayout>