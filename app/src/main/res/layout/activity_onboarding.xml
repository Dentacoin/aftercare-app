<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rectangle_gradient_blue">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.dentacoin.dentacare.widgets.DCTablLayout
        android:id="@+id/tl_tabs"
        style="@style/DCTabLayout"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"/>

    <com.dentacoin.dentacare.widgets.DCButton
        android:id="@+id/btn_next"
        style="@style/DCButton.Auth"
        android:text="@string/onboarding_txt_next"
        android:layout_gravity="center"/>

    <com.dentacoin.dentacare.widgets.DCTextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_txt_skip"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:padding="8dp"/>
</LinearLayout>