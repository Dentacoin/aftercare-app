<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="DCFullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DCSplashTheme" parent="DCFullscreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="DCAuthentication" parent="DCFullscreen">
        <item name="android:windowBackground">@drawable/rectangle_gradient_blue</item>
    </style>

    <style name="DCButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DCButton.Auth" parent="DCButton">
        <item name="android:layout_width">@dimen/button_default_width</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:background">@drawable/btn_auth</item>
        <item name="android:textColor">@drawable/color_default_button</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DCButton.Social" parent="DCButton">
        <item name="android:layout_width">@dimen/button_auth_social_width</item>
        <item name="android:layout_height">@dimen/button_auth_social_height</item>
    </style>

    <style name="DCButton.Default" parent="DCButton">
        <item name="android:layout_width">@dimen/button_default_width</item>
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">@drawable/color_default_button</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DCButton.Agreement" parent="DCButton.Default">
        <item name="android:background">@drawable/btn_agreement</item>
        <item name="android:textColor">@drawable/color_agreement_button</item>
    </style>

    <style name="DCButton.Dashboard" parent="DCButton.Default">
        <item name="android:background">@drawable/btn_dashboard_record</item>
        <item name="android:textColor">@drawable/color_record_button</item>
    </style>

    <style name="DCButton.Statistics">
        <item name="android:layout_width">@dimen/button_dashboard_statistics_width</item>
        <item name="android:layout_height">@dimen/button_dashboard_statistics_height</item>
        <item name="android:background">@drawable/btn_dashboard_statistics</item>
        <item name="android:textColor">@drawable/color_default_button</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DCEditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="DCEditText.Auth" parent="DCEditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DCEditText.Collect" parent="DCEditText">
        <item name="backgroundTint">@color/lightGrey</item>
        <item name="android:textColor">@color/charcoalGrey</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/lightGrey</item>
        <item name="android:colorActivatedHighlight">@color/lightGrey</item>
    </style>

    <style name="DCTextInputLayout" parent="Widget.Design.TextInputLayout">
    </style>

    <style name="DCTextInputLayout.Auth" parent="DCTextInputLayout">
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="DCTextInputLayout.Collect" parent="DCTextInputLayout">
        <item name="android:textColorHint">@color/charcoalGrey</item>
        <item name="android:textColorHighlight">@color/charcoalGrey</item>
        <item name="colorAccent">@color/charcoalGrey</item>
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/lightGrey</item>
        <item name="colorControlHighlight">@color/lightGrey</item>
    </style>

    <style name="DCSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">@color/ceruleanBlue</item>
        <item name="colorControlNormal">@color/ceruleanBlue</item>
        <item name="colorControlActivated">@color/ceruleanBlue</item>
        <item name="colorControlHighlight">@color/ceruleanBlue</item>
    </style>

    <style name="DCListItem">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="DCListItem.Header">
        <item name="android:minHeight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/greyTransparent</item>
        <item name="android:padding">@dimen/list_header_padding</item>
    </style>

    <style name="DCTextStyle">"
    </style>

    <style name="DCNavigationView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DCDashboardTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
